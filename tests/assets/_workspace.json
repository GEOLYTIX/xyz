    },
    "europe": {
      "role": "europe",
      "extent": {},
      "layers": {
        "Scratch": {
          "template": "scratch_geojson",
          "role": "scratch_role"
        },
        "Scratch_no_role": {
          "template": "scratch_geojson"
        }
      },
      "locales": ["UK_locale", "brand_b_locale", "brand_c_locale"]
    }
  }
}
