{
  "templates": {
    "query": {},
    "brand_a_locale": {
      "layers": {
        "brand_a_layer": {
          "template": "scratch_geojson"
        }
      }
    },
    "brand_b_locale": {
      "role": "brand_b",
      "layers": {
        "brand_b_layer": {
          "template": "scratch_geojson"
        }
      }
    },
    "brand_c_locale": {
      "role": "brand_c",
      "layers": {
        "brand_c_layer": {}
      }
    },
    "UK_locale": {
      "role": "UK",
      "extent": {},
      "layers": {
        "brand_c_layer": {}
      }
    },
    "OSM": {
      "display": true,
      "format": "tiles",
      "URI": "https://{a-c}.tile.openstreetmap.org/{z}/{x}/{y}.png",
      "attribution": {
        "Â© OpenStreetMap": "http://www.openstreetmap.org/copyright"
      }
    },
    "scratch_geojson": {
      "format": "geojson",
      "dbs": "NEON",
      "table": "scratch",
      "srid": "3857",
      "geom": "geom_3857",
      "qID": "id",
      "style": {
        "highlight": {
          "scale": 1.3,
          "strokeColor": "#090"
        }
      },
      "templates": [
        {
          "name": "SCRATCH NO ROLE TEMPLATE"
        },
        {
          "name": "SCRATCH ROLE TEMPLATE",
          "role": "scratch_role_template"
        }
      ],
      "infoj": [
        {
          "type": "geometry",
          "display": true,
          "field": "geom_3857",
          "fieldfx": "ST_asGeoJSON(geom_3857)"
        },
        {
          "type": "pin",
          "label": "ST_PointOnSurface",
          "field": "pin",
          "fieldfx": "ARRAY[ST_X(ST_PointOnSurface(geom_3857)),ST_Y(ST_PointOnSurface(geom_3857))]"
        },
        {
          "title": "ID",
          "field": "id",
          "inline": true
        }
      ]
    }
  },
  "locale": {
    "layers": {
      "OSM": {
        "template": "OSM"
      },
      "OSM_Layer": {
        "name": "OSM",
        "template": "OSM",
        "exclude_props": ["format", "attribution", "URI"]
      },
      "OSM_Duplicate": {
        "name": "OSM Duplicate",
        "template": "OSM",
        "include_props": ["display", "attribution"]
      }
    }
  },
  "locales": {
    "uk": {
      "extent": {},
      "layers": {},
