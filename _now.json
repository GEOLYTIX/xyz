{
  "version": 2,
  "regions": [
    "lhr1"
  ],
  "builds": [
    {
      "src": "/public/**",
      "use": "@now/static"
    },
    {
      "src": "/docs/**",
      "use": "@now/static"
    },
    {
      "src": "/api.js",
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "public/**"
        ]
      }
    }
  ],
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Access-Control-Allow-Headers, Authorization, X-Requested-With"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; base-uri 'self'; object-src 'self'; worker-src 'self' blob:; frame-src 'self' www.google.com www.gstatic.com; form-action 'self'; style-src 'self' 'unsafe-inline' fonts.googleapis.com cdn.jsdelivr.net; font-src 'self' fonts.gstatic.com cdn.jsdelivr.net; script-src 'self' 'unsafe-inline' www.google.com www.gstatic.com cdn.jsdelivr.net blob:; img-src 'self' geolytix.github.io api.ordnancesurvey.co.uk *.tile.openstreetmap.org api.mapbox.com res.cloudinary.com *.global.ssl.fastly.net raw.githubusercontent.com cdn.jsdelivr.net gitcdn.xyz data:"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/xyz/docs/(.*)",
      "destination": "/docs/$1/$2"
    },
    {
      "source": "/xyz/docs",
      "destination": "/docs/index.html"
    },
    {
      "source": "/(public|workspaces|views|css|js|icons|queries)/(.*)",
      "destination": "/public/$1/$2"
    },
    {
      "source": "/api/query/:_template?",
      "destination": "/api.js"
    },
    {
      "source": "/api/location/:method?",
      "destination": "/api.js"
    },
    {
      "source": "/api/user/:method?/:key?",
      "destination": "/api.js"
    },
    {
      "source": "/api/workspace/:method?/:key?",
      "destination": "/api.js"
    },
    {
      "source": "/api/layer/:format?/:z?/:x?/:y?",
      "destination": "/api.js"
    },
    {
      "source": "/api/provider/:provider?",
      "destination": "/api.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api.js"
    },
    {
      "source": "/view/:_template?/:access?",
      "destination": "/api.js"
    },
    {
      "source": "/:access?",
      "destination": "/api.js"
    },
    {
      "source": "/",
      "destination": "/api.js"
    }
  ]
}