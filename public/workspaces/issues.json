                "© OpenStreetMap": "http://www.openstreetmap.org/copyright"
            }
        },
        "HERE Hybrid": {
            "format": "tiles",
            "URI": "https://2.aerial.maps.ls.hereapi.com/maptile/2.1/maptile/newest/hybrid.day/{z}/{x}/{y}/256/png8?{HERE}",
            "proxy": true,
            "attribution": {
                "© Here": "https://www.here.com/",
                "© OpenStreetMap": "http://www.openstreetmap.org/copyright"
            }
        },
        "test_feature_collection": {
            "template": "SELECT jsonb_build_object('type', 'FeatureCollection', 'features', features.features) AS collection FROM ( SELECT array_agg(json_build_object('type', 'Feature', 'geometry', st_asgeojson(a.geom_p_4326)::jsonb)) features FROM dev.catchment_test a WHERE a.site_id = 17 ) features;"
        }
    },
    "locales": {
        "UK": {
            "name": "United Kingdom",
            "gazetteer": {
                "provider": "GOOGLE",
                "country": "GB",
                "placeholder": "eg. London",
                "label": true,
                "optional": true
            },
            "bounds": {
                "north": 67,
                "east": -25,
                "south": 47.5,
                "west": 15
            },
            "view": {
                "lat": 50,
                "lng": 0
            },
            "minZoom": 5,
            "maxZoom": 18,
            "showScaleBar": true,
            "layers": {
                "Mapbox Base": {
                    "group": "Maps",
                    "display": true,
                    "template": "Mapbox Base"
                },
                "Mapbox Label": {
                    "group": "Maps",
                    "display": true,
                    "template": "Mapbox Label"
                },
                "Mapbox Colour": {
                    "group": "Maps",
                    "template": "Mapbox Colour No Labels"
                },
                "HERE Imagery": {
                    "group": "Maps",
                    "template": "HERE Imagery"
                },
                "HERE Hybrid": {
                    "group": "Maps",
                    "template": "HERE Hybrid"
                },
                "GEOJSON ISSUE": {
                    "format": "cluster",
                    "dbs": "XYZ",
                    "table": "dev.uk_glx_sites",
                    "geom": "geom_4326",
                    "srid": "4326",
                    "qID": "id",
                    "cluster_label": "id",
                    "cluster_kmeans": 0.001,
                    "style": {
                        "default": {
                            "scale": 0.6,
                            "zoomInScale": 0.2
                        },
                        "cluster": {
                            "clusterScale": 0.1
                        },
                        "themes": {}
                    },
                    "infoj": [
                        {
                            "type": "key"
                        },
                        {
                            "name": "ID",
                            "field": "id"
                        },
                        {
                            "group": "Catchments",
                            "expanded": true,
                            "name": "Nearest to catchments",
                            "field": "collection",
                            "type": "geometry",
                            "query": "test_feature_collection",
                            "style": {
                                "marker": {
                                    "type": "circle",
                                    "scale": 0.7
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}